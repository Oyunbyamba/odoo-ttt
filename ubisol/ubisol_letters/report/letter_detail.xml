<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="letter_detail_pdf">
        <t t-call="web.html_container">
            <t t-set="company" t-value="env.company"/>
                <t t-call="ubisol_letters.letter_print_header" t-lang="mn_MN">
                    <div class="col-12 page">
                        <t t-raw="doc.custom_letter_template"/>
                        
                       <t t-esc="docs.register_number"/>

                    </div>
                </t>
            
        </t>
    </template>
    <template id ="letter_detail_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="ubisol_letters.letter_detail_pdf"/>

            </t>
        </t>
    </template>
</odoo>
