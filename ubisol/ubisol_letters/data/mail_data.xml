<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Leave specific activities -->
        <record id="mail_act_letter_coming_transfer" model="mail.activity.type">
            <field name="name">Баримт шилжүүлсэн</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model_id" ref="ubisol_letters.model_ubi_letter_coming"/>
        </record>
        <record id="mail_act_leave_second_approval" model="mail.activity.type">
            <field name="name">Time Off Second Approve</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model_id" ref="hr_holidays.model_hr_leave"/>
        </record>

        <!-- Letter-related subtypes for messaging / Chatter -->
        <record id="mt_transferred" model="mail.message.subtype">
            <field name="name">Баримт бичиг</field>
            <field name="res_model">ubi.letter.coming</field>
            <field name="default" eval="True"/>
            <field name="description">Баримт шилжүүлсэн</field>
        </record>

    </data>
</odoo>
