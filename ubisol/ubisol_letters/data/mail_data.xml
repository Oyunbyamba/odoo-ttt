<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Letter specific activities -->
        <record id="mail_act_letter_confirm" model="mail.activity.type">
            <field name="name">Албан бичиг хянасан</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model_id" ref="ubisol_letters.model_ubi_letter_going"/>
        </record>
        <record id="mail_act_letter_validate1" model="mail.activity.type">
            <field name="name">Албан бичиг зөвшөөрсөн</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model_id" ref="ubisol_letters.model_ubi_letter_going"/>
        </record>
        <record id="mail_act_letter_validate" model="mail.activity.type">
            <field name="name">Албан бичиг баталсан</field>
            <field name="icon">fa-sun-o</field>
            <field name="res_model_id" ref="ubisol_letters.model_ubi_letter_going"/>
        </record>
        <record id="mail_act_letter_refuse" model="mail.activity.type">
            <field name="name">Албан бичиг татгалзсан</field>
            <field name="icon">fa-ban</field>
            <field name="res_model_id" ref="ubisol_letters.model_ubi_letter_going"/>
        </record>

        <!-- Letter-related subtypes for messaging / Chatter -->
        <record id="mt_transferred" model="mail.message.subtype">
            <field name="name">Албан бичиг</field>
            <field name="res_model">ubi.letter.coming</field>
            <field name="default" eval="True"/>
            <field name="description">Баримт шилжүүлсэн</field>
        </record>

    </data>
</odoo>
