<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!--going-->
    <record id="ubi_letter_going_tree_view" model="ir.ui.view">
        <field name="name">ubi.letter.going.subject.tree</field>
        <field name="model">ubi.letter.going</field>
        <field name="arch" type="xml">
            <tree string="Ubi Letter" import='false' export_xlsx='false' 
            decoration-success="state == 'sent'" 
            decoration-danger="state == 'refuse'" 
            decoration-info="state == 'draft'">
                <field name="letter_subject_id"/>
                <field name="letter_type_id"/>
                <field name="letter_number"/>
                <field name="registered_date"/>
                <field name="letter_total_num"/>
                <field name="partner_id" string='Хаана'/>
                <field name="to_user" string='Хэнд'/>
                <field name="department_id" string='Илгээсэн хэлтэс'/>
                <field name="is_local"/>
                <field name="state" string='Төлөв'/>
                <button string="Илгээх" name="prepare_sending" type="object"
                    icon="fa-check text-success"
                    states="draft"
                    groups="hr.group_hr_manager"/>   
                <button string="Цуцлах" name="cancel_sending" type="object"
                    icon="fa-ban text-danger"
                    states="sent"
                    groups="hr.group_hr_manager"/>        
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_going_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.going.subject.form</field>
        <field name="model">ubi.letter.going</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <button string="Илгээх" name="prepare_sending" type="object" attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Үндсэн мэдээлэл">
                            <field name="letter_subject_id" required='1'/>
                            <field name="letter_number" required='1'/>
                            <field name="letter_type_id" required='1'/>
                            <field name="letter_template_id"/>
                            <field name="letter_date" required='1'/>
                            <field name="decide_date" string='Шийдвэрлэх'/>
                            <field name="letter_total_num"/>
                        </group>

                        <group string="Бүртгэл">
                            <field name="priority_id"/>
                            <field name="partner_id" string='Хаашаа' required='1' options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="official_person" string='Хэнд'/>
                            <field name="department_id" string='Хаанаас' options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="is_local" string='Дотоод бичиг'/>
                            <field name="must_return" string='Хариутай эсэх'/>
                            <field name="must_return_date" attrs="{'invisible': [('must_return','!=',True)]}"/>
                        </group>

                        <group string="Хавсралт">
                            <field name="letter_attachment_ids" widget="many2many_binary" required='1'/>
                        </group>

                        <group string="Боловсруулсан">
                            <field name="draft_user_id" string='Боловсруулсан' options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="confirm_user_id" string='Хянасан' options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="validate_user_id" string='Гарын үсэг зурсан' options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        </group>

                        <group string='Ирсэн бичгийн хариу'>
                            <field name="coming_letters" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="computed_letter_type" attrs="{'invisible': [('coming_letters', '=', False)]}"/>
                            <field name="computed_letter_subject" attrs="{'invisible': [('coming_letters', '=', False)]}"/>
                            <!-- <field name="computed_letter_desc"/> -->
                        </group>
                    </group>

                    <notebook>
                        <page string="Агуулга">
                            <field name="custom_letter_template" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="ubi_action_going_letter" model="ir.actions.act_window">
        <field name="name">Явсан бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter.going</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_going_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_going_form_view')})]"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new document
            </p>
        </field>
    </record>

    <record model="ir.actions.server" id="action_letter_send">
        <field name="name">ТАБС-аар илгээх</field>
        <field name="model_id" ref="model_ubi_letter_going"/>
        <field name="binding_model_id" ref="model_ubi_letter_going" />
        <field name="state">code</field>
        <field name="code">
            if records:
                records.prepare_sending()
        </field>
    </record>

    <record model="ir.actions.server" id="call_cancel_wizard_action">
        <field name="name">Цуцлах</field>
        <field name="model_id" ref="model_ubi_letter_going"/>
        <field name="binding_model_id" ref="model_ubi_letter_going" />
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.cancel_sending()
        </field>
    </record>

</odoo>
