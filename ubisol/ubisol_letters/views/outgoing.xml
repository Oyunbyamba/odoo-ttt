<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!--going-->
    <record id="ubi_letter_going_tree_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.tree</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <tree string="Ubi Letter" import='false' export_xlsx='false'
                decoration-success="going_state == 'sent'" decoration-info="going_state == 'draft'">
                <field name="letter_subject_id"/>
                <field name="letter_type_id"/>
                <field name="letter_number"/>
                <field name="registered_date"/>
                <field name="letter_total_num"/>
                <field name="partner_id" string='Хаана'/>
                <field name="department_id" string='Илгээсэн хэлтэс'/>
                <field name="is_local"/>
                <field name="letter_status" invisible='1'/>
                <field name="going_state" string='Төлөв'/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_going_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.form</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <button string="Илгээх" name="action_sent" type="object"
                            attrs="{'invisible': [('going_state', 'not in', ['sent'])]}"/>
                    <field name="going_state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Үндсэн мэдээлэл">
                            <field name="letter_subject_id"/>
                            <field name="letter_number"/>
                            <field name="letter_type_id"/>
                            <field name="letter_template_id"/>
                            <field name="letter_date"/>
                            <field name="decide_date" string='Шийдвэрлэх'/>
                            <field name="letter_total_num"/>
                        </group>

                        <group string="Бүртгэл">
                            <field name="partner_id" string='Хаана'/>
                            <field name="official_person" string='Хэнд'/>
                            <field name="department_id" string='Хаанаас'/>
                            <field name="is_local" string='Дотоод бичиг'/>  
                            <field name="must_return" string='Хариутай эсэх'/>
                            <field name="must_return_date" attrs="{'invisible': [('must_return','!=',True)]}"/>
                            <field name="letter_status" invisible='1'/>
                        </group>

                        <group string="Хавсралт">
                            <field name="letter_attachment_id" widget="many2many_binary"/>
                        </group>

                        <group string="Боловсруулсан">
                            <field name="draft_user_id" string='Боловсруулсан'/>
                            <field name="confirm_user_id" string='Хянасан'/>
                            <field name="validate_user_id" string='Гарын үсэг зурсан'/>
                        </group>

                        <group string='Ирсэн бичгийн хариу'>
                            <field name="coming_letters"/>
                            <field name="computed_letter_type"/>
                            <field name="computed_letter_subject"/>
                            <field name="computed_letter_desc"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Агуулга">
                            <field name="custom_letter_template" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ubi_action_going_letter" model="ir.actions.act_window">
        <field name="name">Явсан бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_going_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_going_form_view')})]"/>
        <field name="context">{'default_letter_status': 'going'}</field>
        <field name="domain">[('letter_status', '=', 'going')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new document
            </p>
        </field>
    </record>

    <record model="ir.actions.server" id="action_letter_send">
        <field name="name">Илгээх</field>
        <field name="model_id" ref="model_ubi_letter"/>
        <field name="binding_model_id" ref="model_ubi_letter" />
        <field name="state">code</field>
        <field name="code">
            if records:
                records.letter_send_function()
        </field>
    </record>

</odoo>