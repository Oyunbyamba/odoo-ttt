<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--going-->
    <record id="ubi_letter_going_tree_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.tree</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <tree string="Ubi Letter">
                <field name="registered_date"/>
                <field name="register_number"/>
                <field name="card_number"/>
                <field name="letter_number"/>
                <field name="letter_type_id"/>
                <field name="letter_subject_id"/>
                <field name="letter_template_id"/>
                <field name="letter_total_num"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="is_local"/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_going_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.form</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <field name="return_state" widget="statusbar"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Үндсэн">
                            <group>
                                <group string="Үндсэн мэдээлэл">
                                    <field name="letter_subject_id"/>
                                    <field name="letter_type_id"/>
                                    <field name="letter_template_id"/>
                                    <field name="letter_date"/>
                                    <field name="return_date"/>
                                    <field name="letter_number"/>
                                    <field name="letter_total_num"/>
                                    <field name="desc" widget="text"/>
                                </group>
                                <group string="Хаашаа хэнээс">
                                    <field string="Хаашаа" name="partner_id"/>
                                    <field name="user_id"/>
                                    <field name="department_id"/>
                                </group>
                                <group>
                                    <field name="letter_attachment_id" widget="many2many_binary"/>
                                    <field name="is_local"/>
                                    <field string="Хариутай эсэх" name="must_return"/>
                                </group>
                                <group string="Бүртгэсэн">
                                    <field name="register_number"/>
                                    <field name="card_number"/>
                                    <field name="registered_date"/>
                                </group>
                                <field name="custom_letter_template" widget="html"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ubi_action_going_letter" model="ir.actions.act_window">
        <field name="name">Явсан бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_going_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_going_form_view')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p>action_going_letter</p>
        </field>

    </record>
</odoo>