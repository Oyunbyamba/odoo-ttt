<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="letter_graph_view" model="ir.ui.view">
        <field name="name">letter.subject.graph</field>
        <field name="model">letter.subject</field>
        <field name="arch" type="xml">
            <graph string="Students">
                <field name="name"/>
                <field name = "code"/>
            </graph>
        </field>
    </record>

    <record id = "letter_tree_view" model = "ir.ui.view">
        <field name = "name">letter.subject.tree</field>
        <field name = "model">letter.subject</field>
        <field name = "arch" type = "xml">
            <tree string = "Students">
                <field name="name"/>
                <field name="code"/>
                <field name = "desc"/>
            </tree>
        </field>

    </record>

    <record id="letter_form_view" model="ir.ui.view">
        <field name="name">letter.subject.form</field>
        <field name="model">letter.subject</field>
        <field name="arch" type="xml">
            <form string="Students">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>  
                    <group>
                        <field name="desc"/>
                        <field name = "code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id = "action_settings_letter" model = "ir.actions.act_window">
        <field name = "name">Settings Letter</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">letter.subject</field>
        <field name = "view_mode">form</field>
        <field name = "context">{}</field>
        <field name = "domain">[]</field>
        <field name = "help" type = "html">
            <p>тохиргоо</p>
        </field>

    </record>
    <record id = "action_planning_letter" model = "ir.actions.act_window">
        <field name = "name">Planning Letter</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">letter.subject</field>
        <field name = "view_mode">graph</field>
        <field name = "context">{}</field>
        <field name = "domain">[]</field>
        <field name = "help" type = "html">
            <p>бичиг төлөвлөлт</p>
        </field>

    </record>
    <record id = "action_going_letter" model = "ir.actions.act_window">
        <field name = "name">Going Letter</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">letter.subject</field>
        <field name = "view_mode">tree,form</field>
        <field name = "context">{}</field>
        <field name = "domain">[]</field>
        <field name = "help" type = "html">
            <p>явсан бичиг</p>
        </field>

    </record>

    <record id = "action_incoming_letter" model = "ir.actions.act_window">
        <field name = "name">Incoming Letter</field>
        <field name = "type">ir.actions.act_window</field>
        <field name = "res_model">letter.subject</field>
        <field name = "view_mode">tree,form</field>
        <field name = "context">{}</field>
        <field name = "domain">[]</field>
        <field name = "help" type = "html">
            <p>ирсэн бичиг</p>
        </field>

    </record>
    <menuitem 
        id="letter_root_menu"
        name="Захидал"
        sequence="0"/>
    <menuitem 
        id="letter_menu1"
        name="ирсэн бичиг" action="action_incoming_letter"
        parent="letter_root_menu"
        sequence="1"/>
    <menuitem 
        id="letter_menu2"
        name="явсан бичиг" action="action_going_letter"
        parent="letter_root_menu"
        sequence="2"/>
    <menuitem 
        id="letter_menu3"
        name="бичиг төлөвлөлт" action="action_planning_letter"
        parent="letter_root_menu"
        sequence="3"/>
    <menuitem 
        id="letter_menu4"
        name="тохиргоо" action="action_settings_letter"
        parent="letter_root_menu"
        sequence="4"/>
    
</odoo>