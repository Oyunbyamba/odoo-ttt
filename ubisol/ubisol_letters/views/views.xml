<?xml version="1.0" encoding="utf-8"?>

<odoo>
    

    <!-- settings 1 -->
    <record id="ubi_letter_settings_type_tree" model = "ir.ui.view">
        <field name="name">ubi.letter.settings.type.tree</field>
        <field name="model">ubi.letter.type</field>
        <field name="arch" type = "xml">
            <tree string = "Ubi Letter">
                <field name="name"/>
                <field name="code"/>            
            </tree>
        </field>
    </record>

    <record id="ubi_letter_settings_type_form" model="ir.ui.view">
        <field name="name">ubi.letter.settings.type.form</field>
        <field name="model">ubi.letter.type</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- settings 2 -->
    <record id="ubi_letter_settings_subject_tree" model = "ir.ui.view">
        <field name="name">ubi.letter.settings.subject.tree</field>
        <field name="model">ubi.letter.subject</field>
        <field name="arch" type = "xml">
            <tree string = "Ubi Letter">
                <field name="name"/>
                <field name="code"/>
                <field name="desc"/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_settings_subject_form" model="ir.ui.view">
        <field name="name">ubi.letter.settings.subject.form</field>
        <field name="model">ubi.letter.subject</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="desc"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- settings 3 -->
    <record id="ubi_letter_settings_template_tree" model = "ir.ui.view">
        <field name="name">ubi.letter.settings.template.tree</field>
        <field name="model">ubi.letter.template</field>
        <field name="arch" type = "xml">
            <tree string = "Ubi Letter">
                <field name="letter_template_name"/>
                <field name="letter_template"/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_settings_template_form" model="ir.ui.view">
        <field name="name">ubi.letter.settings.template.form</field>
        <field name="model">ubi.letter.template</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <sheet>
                    <group>
                            <field name="letter_template_name"/>                     
                            <field name="letter_template"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- planning -->
    <record id="ubi_letter_planning_kanban_view" model="ir.ui.view">
        <field name="name">ubi.letter.kanban</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="row">
                                    <div class="o_primary style_shift">
                                        <div class="text-center">
                                            <span style="margin-left:25px;">
                                                <strong>
                                                    <field name="user_id"/>
                                                </strong>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                    <div class="text-center">
                                    </div>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
  
    <!--incoming-->
    <record id="ubi_letter_incoming_tree_view" model = "ir.ui.view">
        <field name="name">ubi.letter.subject.tree</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type = "xml">
            <tree string = "Ubi Letter">
                <field name="received_date"/>
                <field name="registered_date"/>
                <field name="register_number"/>
                <field name="card_number"/>
                <field name="letter_number"/>
                <field name="letter_type_id"/>
                <field name="letter_subject_id"/>
                <field name="letter_template_id"/>
                <field name="letter_total_num"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="is_local"/>
                <field name="must_return"/>
                <field name="return_date"/>
            </tree>
        </field>
    </record>
    <record id="ubi_letter_incoming_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.form</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <field name="receiving_state" widget="statusbar"/>
                </header>
                <sheet>          
                    <notebook>
                        <page string="Үндсэн" >
                            <group>
                                <group string="Үндсэн мэдээлэл">
                                    <field name="letter_subject_id"/>
                                    <field name="received_date" invisible="1"/>
                                    <field name="letter_date"/>                                
                                    <field name="letter_number"/>
                                    <field name="letter_type_id"/>
                                    <field name="letter_total_num"/>
                                   <field name="desc" widget="text"/>
                                </group>
                                
                                <group string="Хаанаас хэнд">
                                    <field name="partner_id"/>
                                    <field name="department_id"/>
                                    <field name="user_id" />
                                </group>
                                <group>
                                
                                <field name="is_local"/>
                                <field name="must_return"/>
                                <field name="is_head_company"/>
                                <field name="return_date"/>

                                </group>
                                <group string="Бүртгэлийн мэдээлэл">
                                    <field name="register_number"/>
                                    <field name="card_number"/>
                                    <field name="registered_date" />
                                </group>
                                
                            </group> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--going-->
    <record id="ubi_letter_going_tree_view" model = "ir.ui.view">
        <field name="name">ubi.letter.subject.tree</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type = "xml">
            <tree string = "Ubi Letter">
                <field name="registered_date"/>
                <field name="register_number"/>
                <field name="card_number"/>
                <field name="letter_number"/>
                <field name="letter_type_id"/>
                <field name="letter_subject_id"/>
                <field name="letter_template_id"/>
                <field name="letter_total_num"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="is_local"/>
            </tree>
        </field>
    </record>
    <record id="ubi_letter_going_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.form</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <field name="return_state" widget="statusbar"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Үндсэн">
                            <group>
                                <group string="Үндсэн мэдээлэл">
                                    <field name="letter_subject_id"/>
                                    <field name="letter_type_id"/>
                                    <field name="letter_template_id"/>
                                    <field name="letter_date"/>
                                    <field name="return_date"/>
                                    <field name="letter_number"/>
                                    <field name="letter_total_num"/>
                                    <field name="desc" widget="text"/>

                                </group>
                                <group string="Хаашаа хэнээс">
                                    <field string="Хаашаа" name="partner_id"/>
                                    <field name="user_id"/>
                                    <field name="department_id"/>
                                </group>
                                <group>
                                    <field name="document_ids" widget="many2many_binary"/>
                                    <field name="is_local"/>
                                    <field string="Хариутай эсэх" name="must_return"/>
                                </group>
                                <group string="Бүртгэсэн">
                                    <field name="register_number"/>
                                    <field name="card_number"/>
                                    <field name="registered_date"/>
                                </group>
                                <field name="custom_letter_template" widget="html"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- undsen -->
    <record id="ubi_action_planning_letter" model = "ir.actions.act_window">
        <field name="name">Бичиг төлөвлөлт</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">kanban</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>action_planning_letter</p>
        </field>

    </record>
    <record id="ubi_action_going_letter" model = "ir.actions.act_window">
        <field name="name">Явсан бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_going_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_going_form_view')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>action_going_letter</p>
        </field>

    </record>

    <record id="ubi_action_incoming_letter" model = "ir.actions.act_window">
        <field name="name">Ирсэн бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_incoming_tree_view')},),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_incoming_form_view')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>action_incoming_letter</p>
        </field>

    </record>

    <record id="action_settings_letter_type" model = "ir.actions.act_window">
        <field name="name">Албан бичгийн төрөл</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_settings_type_tree')},),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_settings_type_form')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>Албан бичгийн төрөл</p>
        </field>
    </record>
    <record id="action_settings_letter_subject" model = "ir.actions.act_window">
        <field name="name">Албан бичгийн тэргүү</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_settings_subject_tree')},),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_settings_subject_form')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>Албан бичгийн тэргүү</p>
        </field>
    </record>
    <record id="action_settings_letter_template" model = "ir.actions.act_window">
        <field name="name">Албан бичгийн загвар</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_settings_template_tree')},),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_settings_template_form')})]"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type = "html">
            <p>Албан бичгийн загвар</p>
        </field>
    </record>

    <!-- menu -->
    <menuitem 
        id="ubi_letter_root_menu"
        name="Албан бичиг"
        sequence="13"
        groups="base.group_user"/>
    <menuitem 
        id="ubi_letter_menu1"
        name="Ирсэн бичиг" action = "ubi_action_incoming_letter"
        parent="ubi_letter_root_menu"
        sequence="1"/>
    <menuitem 
        id="ubi_letter_menu2"
        name="Явсан бичиг" action = "ubi_action_going_letter"
        parent="ubi_letter_root_menu"
        sequence="2"/>
    <menuitem   
        id="ubi_letter_menu3"
        name="Бичиг төлөвлөлт" action = "ubi_action_planning_letter"
        parent="ubi_letter_root_menu"
        sequence="3"/>
    <menuitem 
        id="ubi_letter_menu4"
        name="Тохиргоо"
        parent="ubi_letter_root_menu"
        sequence="4"/>

    <menuitem 
        id="ubi_letter_menu_settings_type"
        name="Бичгийн төрөл" action = "action_settings_letter_type"
        parent="ubi_letter_menu4"
        sequence="1"/>
    <menuitem 
        id="ubi_letter_menu_settings_subject"
        name="Бичгийн тэргүү" action = "action_settings_letter_subject"
        parent="ubi_letter_menu4"
        sequence="2"/>
    <menuitem 
        id="ubi_letter_menu_settings_template"
        name="Бичгийн загвар" action = "action_settings_letter_template"
        parent="ubi_letter_menu4"
        sequence="3"/>
    

</odoo>