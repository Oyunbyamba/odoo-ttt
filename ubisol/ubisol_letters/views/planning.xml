<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- planning -->
    <record id="ubi_letter_planning_kanban_view" model="ir.ui.view">
        <field name="name">ubi.letter.kanban</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="row">
                                    <div class="o_primary style_shift">
                                        <div class="text-center">
                                            <span style="margin-left:25px;">
                                                <strong>
                                                    <field name="user_id"/>
                                                </strong>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                    <div class="text-center">
                                    </div>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ubi_action_planning_letter" model="ir.actions.act_window">
        <field name="name">Бичиг төлөвлөлт</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">kanban</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p>action_planning_letter</p>
        </field>
    </record>
</odoo>