<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--incoming-->
    <template id="assets_backend_ubisol_letters" name="Import letter" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/ubisol_letters/static/src/js/import_letter.js"/>
        </xpath>
    </template>

    <record id="ubi_letter_incoming_tree_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.tree</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <tree string="Ubi Letter" import='false' export_xlsx='false'
                decoration-success="receiving_state == 'validate'" decoration-info="receiving_state == 'receive'"
                decoration-danger="receiving_state == 'conflict'">
                <field name="letter_subject_id"/>
                <field name="letter_type_id"/>
                <field name="letter_number"/>
                <field name="received_date"/>
                <field name="letter_total_num"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="is_local"/>
                <field name="receiving_state" string='Төлөв'/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_incoming_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.subject.form</field>
        <field name="model">ubi.letter</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <button string="Хүлээн авах" name="action_receive" type="object" class="oe_highlight" attrs="{'invisible': [('receiving_state', 'not in', ('draft'))]}"/>
                    <button string="Судлаж байгаа" name="action_review" type="object" class="oe_highlight" attrs="{'invisible': [('receiving_state', 'not in', ('receive', 'conflict'))]}"/>
                    <button string="Шилжүүлсэн" name="action_transfer" type="object" class="oe_highlight" attrs="{'invisible': [('receiving_state', 'not in', ('review'))]}"/>
                    <button string="Шийдвэрлэсэн" name="action_validate" type="object" class="oe_highlight" attrs="{'invisible': [('receiving_state', 'not in', ('transfer', 'conflict'))]}"/>
                    <button string="Зөрчилтэй" name="action_conflict" type="object" attrs="{'invisible': [('receiving_state', 'in', ('validate', 'transfer', 'refuse', 'conflict'))]}"/>
                    <button string="Буцаасан" name="action_refuse" type="object" attrs="{'invisible': [('receiving_state', 'in', ('validate', 'conflict', 'refuse'))]}"/>
                    <field name="receiving_state" widget="statusbar" statusbar_visible="review,validate"/>
                </header>
                <sheet>
                    <group>
                        <group string="Үндсэн мэдээлэл">
                            <field name="letter_subject_id"/>
                            <field name="letter_number"/>
                            <field name="letter_type_id"/>
                            <field name="received_date" string='Хүлээн авсан'/>
                            <field name="decide_date" string='Шийдвэрлэх'/>
                            <field name="letter_total_num"/>
                        </group>

                        <group string="Бүртгэл">
                            <field name="partner_id"/>
                            <field name="user_id" />
                            <field name="is_local" string='Дотоод бичиг'/>
                            <field name="is_head_company" string='Дээд газраас ирсэн'/>
                            <field name="must_return" string='Хариутай эсэх'/>
                        </group>

                        <group string="Хавсралт">
                            <field name="letter_attachment_id" widget="many2many_binary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Агуулга">
                            <field name="desc" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
        

    <record id="ubi_action_incoming_letter" model="ir.actions.act_window">
        <field name="name">Ирсэн бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_incoming_tree_view')},),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_incoming_form_view')})]"/>
        <field name="context">{}</field>
        <field name="domain">[('letter_status', '=', 'coming')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new document
            </p>
        </field>

    </record>
</odoo>