<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--incoming-->
    <template id="assets_backend_ubisol_letters" name="Import letter" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/ubisol_letters/static/src/js/import_letter.js"/>
        </xpath>
    </template>

    <record id="ubi_letter_incoming_kanban_view" model="ir.ui.view">
        <field name="name">ubi.letter.coming.kanban</field>
        <field name="model">ubi.letter.coming</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click" style="background-color: #FEFEFE; font-style:Arial; line-height: 0.7; padding-top:10px; padding-right:0px; " >
                            <div class="row">
                                <div t-attf-class="col-12 #{!selection_mode ? 'text-left' : ''}">        
                                    <p><strong><field name="letter_subject_id"/></strong></p>
                                    <p>Төлөв: <field name="state" string='Төлөв'/></p>
                                    <p>Баримтын дугаар: <field name="letter_number"/></p>
                                    <p>Хүлээн авсан огноо: <field name="received_date"/></p>                                    
                                </div>
                            </div>                       
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="ubi_letter_incoming_tree_view" model="ir.ui.view">
        <field name="name">ubi.letter.coming.subject.tree</field>
        <field name="model">ubi.letter.coming</field>
        <field name="arch" type="xml">
            <tree
                string="Ubi Letter" default_order='id desc' import='false' export_xlsx='false'
                 decoration-success="state == 'validate'" decoration-info="state == 'receive'" 
                 decoration-primary="state == 'transfer'" 
                 decoration-warning="state == 'draft'" 
                 decoration-danger="state == 'refuse'" decoration-bf="state == 'receive'" decoration-it="state == 'receive'">
                <field name="letter_subject_id"/>
                <field name="letter_type_id"/>
                <field name="letter_number"/>
                <field name="received_date"/>
                <field name="letter_total_num"/>
                <field name="partner_id"/>
                <field name="to_user" string='Хэнээс'/>
                <field name="is_local"/>
                <field name="state" string='Төлөв'/>
                <button string="Хүлээн авах" name="letter_receiving" type="object"
                    icon="fa-download text-success"
                    states="draft"
                    groups="hr.group_hr_manager"/>
                <button string="Шийдвэрлэх" name="action_validate" type="object"
                    icon="fa-check text-success"
                    states="review"
                    groups="hr.group_hr_manager"/>   
                <button string="Буцаах" name="call_return_wizard" type="object"
                    icon="fa-ban text-danger"
                    states="receive"
                    groups="hr.group_hr_manager"/>        
                <field name="activity_exception_decoration" widget="activity_exception"/>
            </tree>
        </field>
    </record>

    <record id="ubi_letter_incoming_form_view" model="ir.ui.view">
        <field name="name">ubi.letter.coming.subject.form</field>
        <field name="model">ubi.letter.coming</field>
        <field name="arch" type="xml">
            <form string="Ubi Letter">
                <header>
                    <button string="Хүлээн авах" name="letter_receiving" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                    <button string="Судлаж байгаа" name="action_review" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('draft', 'conflict'))]}"/>
                    <button string="Шилжүүлсэн" name="action_transfer" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('review'))]}"/>
                    <button string="Шийдвэрлэсэн" name="action_validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ('transfer', 'conflict', 'review'))]}"/>
                    <!-- <button string="Зөрчилтэй" name="action_conflict" type="object" attrs="{'invisible': [('state', 'in', ('validate', 'transfer', 'refuse', 'conflict'))]}"/> -->
                    <button string="Буцаасан" name="call_return_wizard" type="object" attrs="{'invisible': [('state', 'in', ('validate', 'conflict', 'refuse'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,receive,transfer,review,validate"/>
                </header>
                <sheet>
                    <group>
                        <group string="Үндсэн мэдээлэл">
                            <field name="tabs_id" invisible='1'/>
                            <field name="letter_subject_id" required='1' attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                            <field name="letter_number" required='1' attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                            <field name="letter_type_id" required='1' attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                            <field name="letter_date" string='Бичгийн огноо' attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>                            
                            <field name="letter_total_num" attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                           
                        </group>

                        <group string="Нэмэлт">
                            <field name="partner_id" string="Илгээсэн байгууллага" 
                                options="{'no_create': True, 'no_create_edit':True, 'no_open': True}" 
                                attrs="{'readonly': ['|', ('state', '!=', 'draft'), ('tabs_id', '!=', 0)]}" required='1'/>
                            <field name='official_person' string='Хэнээс' 
                                attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                            <field name="department_id" string='Хүлээн авах нэгж' 
                                attrs="{'invisible': [('state', 'in', ('draft'))]}" 
                                options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="user_id" string='Хэнд' 
                                attrs="{'invisible': [('state', 'in', ('draft'))]}" 
                                options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        </group>

                        <group>
                            <field name="priority_id" attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                            <field name="is_head_company" string='Дээд газраас ирсэн'/>
                            <field name="must_return" string='Хариутай эсэх'/>
                            <field name="must_return_date" attrs="{'invisible': [('must_return','!=',True)]}"/>
                        </group>
                        
                        <group string="Бүртгэл">
                            <field name="receive_user_id" string='Хүлээн авсан' readonly='1'/>
                            <field name="received_date" readonly='1'/>
                        </group>
                        <group string="Хавсралт">
                            <field name="letter_attachment_ids" widget="many2many_binary" required='1'/>
                        </group>

                        <group string='Явсан бичгийн хариу'>
                            <field name="going_letters" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                            <field name="computed_letter_type" attrs="{'invisible': [('going_letters', '=', False)]}"/>
                            <field name="computed_letter_subject" attrs="{'invisible': [('going_letters', '=', False)]}"/>
                            <!-- <field name="computed_letter_desc" attrs="{'invisible': [('going_letters', '=', False)]}"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Агуулга">
                            <field name="desc" widget="text" attrs="{'readonly': [('tabs_id', '!=', 0)]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="ubi_action_incoming_letter" model="ir.actions.act_window">
        <field name="name">Ирсэн бичиг</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubi.letter.coming</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ubisol_letters.ubi_letter_incoming_tree_view')},),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('ubisol_letters.ubi_letter_incoming_kanban_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ubisol_letters.ubi_letter_incoming_form_view')})]"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new document
            </p>
        </field>
    </record>

    <record model="ir.actions.server" id="call_return_wizard_action">
        <field name="name">Ирсэн бичиг буцаах</field>
        <field name="model_id" ref="ubisol_letters.model_ubi_letter_coming"/>
        <field name="binding_model_id" ref="ubisol_letters.model_ubi_letter_coming" />
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.call_return_wizard()
        </field>
    </record>

</odoo>