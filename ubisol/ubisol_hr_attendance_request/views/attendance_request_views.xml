<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record model="ir.actions.server" id="action_manager_approval">
        <field name="name">Менежерийн зөвшөөрөл</field>
        <field name="model_id" ref="model_hr_attendance_request"/>
        <field name="binding_model_id" ref="model_hr_attendance_request" />
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_approve()
        </field>
    </record>
    <record model="ir.actions.server" id="action_hr_approval">
        <field name="name">ХН менежерийн зөвшөөрөл</field>
        <field name="model_id" ref="model_hr_attendance_request"/>
        <field name="binding_model_id" ref="model_hr_attendance_request" />
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_validate()
        </field>
    </record>

    <record id="view_employee_filter" model="ir.ui.view">
        <field name="name">hr.attendance.request.search</field>
        <field name="model">hr.attendance.request</field>
        <field name="arch" type="xml">
            <search string="Employees">
                <field name="employee_id" string="Ажилтан" filter_domain="[('employee_id.name', 'ilike', self)]"/>
                <field name="department_id" string="Хэлтэс" operator="child_of" filter_domain="[('department_id.name', 'ilike', self)]"/>
                <field name="name" string="Нэр" filter_domain="[('name', 'ilike', self)]"/>
                <filter domain="[('state','=', 'confirm')]" string="Батлах ёстой" name="approve"/>
                <filter domain="[('state', '=', 'validate1')]" string="2 дахь зөвшөөрөл хэрэгтэй" name="second_approval"/>
                <filter string="Баталсан" domain="[('state', '=', 'validate')]" name="validated"/>
                <separator/>
                <filter string="Манай хэлтэсийн хүсэлт" name="department" domain="['|', ('department_id.member_ids.user_id', '=', uid), ('employee_id.user_id', '=', uid)]"/>
                <filter string="Миний удирддаг хүмүүс" name="managed_people" domain="[('employee_id.parent_id', '=', uid)]"/>
                <filter string="Миний хүсэлтүүд" name="my_requests" domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Илүү цаг" name="overtime_request" domain="[('request_status_type', '=', 'overtime')]"/>
                <filter string="Ирцийн хүсэлт" name="attendance_request" domain="[('request_status_type', '=', 'attendance')]"/>
                <filter string="Гадуур ажил" name="out_of_office" domain="[('request_status_type', '=', 'outside_work')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="department" string="Хэлтэс" domain="[]" context="{'group_by': 'department_id'}"/>
                    <filter name="request_status_type" string="Хүсэлтийн төрөл" domain="[]" context="{'group_by': 'request_status_type'}"/>
                    <filter name="request_type" string="Хүсэлтийн горим" domain="[]" context="{'group_by': 'request_type'}"/>
                    <separator/>
                    <filter name="group_date_from" string="Эхлэх огноо" context="{'group_by':'start_datetime'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_attendance_request_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.request.view.form</field>
        <field name="model">hr.attendance.request</field>
        <field name="arch" type="xml">
            <form string="Илүү цаг">
            <field name="can_reset" invisible="1"/>
            <field name="can_approve" invisible="1"/>
            <header>
                <button string="Батлах ёстой" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
                <button string="Зөвшөөрөх" name="action_approve" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', '!=', 'confirm')]}"/>
                <button string="Батлах" name="action_validate" states="validate1" type="object" groups="hr_holidays.group_hr_holidays_manager" class="oe_highlight"/>
                <button string="Татгалзах" name="action_refuse" type="object" attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', 'not in', ('confirm','validate','validate1'))]}"/>
                <button string="Ноорог болгох" name="action_draft" type="object"
                        attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm', 'refuse'])]}"/>
                <field name="state" widget="statusbar" statusbar_visible="confirm,validate"/>
            </header>
            <sheet> 
                <div class="oe_title" name="title">
                    <h2>
                        <field name="name" placeholder="Гарчиг"/>
                    </h2>
                </div>
            
                <group>
                    <group>
                        <label for="start_datetime" string="Хаанаас" attrs="{'invisible': [('request_status_type', 'in', 'attendance')]}"/>
                        <div class="o_row o_row_readonly">
                            <field name="start_datetime" attrs="{
                                'readonly': [('state', 'not in', ('draft', 'confirm'))],
                                'required': [('request_status_type', '!=', 'attendance')],
                                'invisible': [('request_status_type', 'in', 'attendance')]
                                }"/>
                            <span class="oe_inline" attrs="{'invisible': [('request_status_type', 'in', 'attendance')]}"> хүртэл </span>
                            <field name="end_datetime" attrs="{
                                'readonly': [('state', 'not in', ('draft', 'confirm'))],
                                'required': [('request_status_type', '!=', 'attendance')],
                                'invisible': [('request_status_type', 'in', 'attendance')]
                                }"/>
                        </div> 

                        <label for="start_datetime" string="Хэзээ" attrs="{'invisible': [('request_status_type', 'not in', 'attendance')]}"/>
                        <div class="o_row o_row_readonly">
                            <field name="attendance_date" attrs="{
                                'readonly': [('state', 'not in', ('draft', 'confirm'))],
                                'required': [('request_status_type', '=', 'attendance')],
                                'invisible': [('request_status_type', 'not in', 'attendance')]
                                }"/>
                        </div>
                        <label for="attendance_in_out" string="Ирсэн/явсан" attrs="{
                            'invisible': [('request_status_type', 'not in', 'attendance')]
                            }"/>
                        <div class="o_row o_row_readonly">
                            <field name="attendance_in_out" attrs="{
                                'readonly': [('state', 'not in', ('draft', 'confirm'))],
                                'required': [('request_status_type', '=', 'attendance')],
                                'invisible': [('request_status_type', 'not in', 'attendance')]
                                }"/>
                        </div>

                        <label for="is_frequency_request" string="Өдрөөр үүсгэх эсэх" attrs="{
                            'invisible': [('request_status_type', 'not in', 'overtime')]
                            }"/>
                        <div class="o_row o_row_readonly">
                            <field name="is_frequency_request" attrs="{
                                'readonly': [('state', 'not in', ('draft', 'confirm'))],
                                'invisible': [('request_status_type', 'not in', 'overtime')]
                                }"/>
                        </div>    
                        <label for="description" string="Тайлбар"/>
                        <div>
                            <field name="description"/>
                        </div>
                    </group>
                    <group>
                        <field name="validation_type" string="Шатлал" attrs="{'invisible': True}"/>
                        <field name="request_status_type" string="Хүсэлтийн төрөл" attrs="{
                            'readonly': [('state', 'not in', ('draft', 'confirm'))]
                            }"/>
                        <field name="request_type" string="Горим" groups="hr_holidays.group_hr_holidays_user" attrs="{
                            'readonly': [('state', 'not in', ('draft', 'confirm'))]
                            }"/>
                        <field name="employee_id" string="Ажилтан" attrs="{
                            'readonly': [('state', 'not in', ('draft', 'confirm'))],
                            'required': [('request_type', '=', 'employee')],
                            'invisible': [('request_type', '!=', 'employee')]
                            }"/>
                        <field name="department_id" string="Хэлтэс" groups="hr_holidays.group_hr_holidays_user" attrs="{
                            'readonly': [('state', 'not in', ('draft', 'confirm'))],
                            'required': [('request_type', '=', 'department')],
                            'invisible': [('request_type', 'not in', ('department'))]
                            }"/>
                    </group>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <record id="hr_attendance_request_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.request.tree</field>
        <field name="model">hr.attendance.request</field>
        <field name="arch" type="xml">
            <tree string="Илүү цаг" decoration-danger="state == 'refuse'" decoration-info="state == 'draft'">
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="request_type"/>
                <field name="name" string='Нэр'/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="request_status_type"/>
                <field name="validation_type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <record id="hr_attendance_request_view_kanban" model="ir.ui.view">
        <field name="name">hr.attendance.request.view.kanban</field>
        <field name="model">hr.attendance.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0">
                <field name="employee_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="attendance_date"/>
                <field name="name"/>
                <field name="can_approve"/>
                <field name="request_status_type"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click container">
                            <div class="row no-gutters">
                                <div class="col-2">
                                    <img t-att-src="kanban_image('hr.employee', 'image_128', record.employee_id.raw_value)"
                                        t-att-title="record.employee_id.value"
                                        t-att-alt="record.employee_id.value"
                                        class="oe_kanban_avatar o_image_40_cover float-left mr4"/>
                                </div>
                                <div class="col-10">
                                    <!-- <span class="badge badge-pill float-right mt4 mr16"> days</span> -->
                                    <strong class="o_kanban_record_title"><t t-esc="record.employee_id.value"/></strong>
                                    <div class="text-muted o_kanban_record_subtitle">
                                        <t t-esc="record.request_status_type.value"/>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Хүсэлт засах</a>
                                            <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Устгах</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row no-gutters justify-content-end" t-if="['overtime', 'outside_work'].includes(record.request_status_type.raw_value)">
                                <div class="col-2"/>
                                <div class="col-10">
                                    <span class="text-muted">хэзээ </span>
                                    <field name="start_datetime" widget="datetime"/>
                                    <br/><span class="text-muted">хүртэл </span>
                                    <field name="end_datetime" widget="datetime"/>
                                </div>
                            </div>
                            <div class="row no-gutters justify-content-end" t-if="['attendance'].includes(record.request_status_type.raw_value)">
                                <div class="col-2"/>
                                <div class="col-10">
                                    <span class="text-muted">хэзээ </span>
                                    <field name="attendance_date" widget="datetime"/>
                                </div>
                            </div>
                            <div class="row no-gutters" t-if="['validate', 'refuse'].includes(record.state.raw_value)">
                                <div class="col-2"/>
                                <div class="col-10">
                                    <span t-if="record.state.raw_value === 'validate'" class="fa fa-check text-muted"/>
                                    <span t-else="" class="fa fa-ban text-muted"/>
                                    <span class="text-muted"><t t-esc="record.state.value"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom" t-if="record.can_approve.raw_value">
                                <div class="oe_kanban_bottom_left">
                                    <button t-if="record.state.raw_value === 'confirm'" name="action_approve" type="object" class="btn btn-primary btn-sm mt8">Зөвшөөрөх</button>
                                    <button t-if="record.state.raw_value === 'validate1'" name="action_validate" type="object" class="btn btn-primary btn-sm mt8" groups="hr_holidays.group_hr_holidays_manager">Батлах</button>
                                    <button t-if="['confirm', 'validate', 'validate1'].includes(record.state.raw_value)" name="action_refuse" type="object" class="btn btn-secondary btn-sm mt8">Татгалзах</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
     </record>

    <record id="hr_attendance_request_action_my" model="ir.actions.act_window">
        <field name="name">Илүү цаг</field>
        <field name="res_model">hr.attendance.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ирцийн хүсэлт шинээр үүсгэх
            </p>
        </field>
    </record>

     <record id="hr_attendance_request_action_approve" model="ir.actions.act_window">
        <field name="name">Илүү цаг</field>
        <field name="res_model">hr.attendance.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[('employee_id.parent_id.user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ирцийн хүсэлт шинээр үүсгэх
            </p>
        </field>
    </record>

    <record id="hr_attendance_request_action_all" model="ir.actions.act_window">
        <field name="name">Илүү цаг</field>
        <field name="res_model">hr.attendance.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[(1, '=', 1)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ирцийн хүсэлт шинээр үүсгэх
            </p>
        </field>
    </record>


</odoo>
