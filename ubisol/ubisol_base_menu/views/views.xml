    <template id="assets_backend_menu_collapsible" name="assets.backend.menu.collapsible" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/ubisol_base_menu/static/src/css/menu_collapsible.css" />
            <script type="text/javascript" src="/ubisol_base_menu/static/src/js/menu_collapsible.js"></script>
        </xpath>
    </template>

    <menuitem name="Base menu" id="ubisol_base_menu.menu_1_list" groups="base.group_user" sequence="-100"/>
