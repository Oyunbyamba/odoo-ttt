    <menuitem name="Хянах самбар"
        id="board.menu_board_my_dash" 
        parent="ubisol_base_menu.menu_1_list"
        action="board.open_board_my_dash_action" sequence="1" groups="base.group_user"/>

    <menuitem name="Discuss"
        id="mail.menu_root_discuss" 
        parent="ubisol_base_menu.menu_1_list"
        action="mail.action_discuss" web_icon="mail,static/description/icon.png" groups="base.group_user" sequence="2"/>

    <menuitem name="Calendar"
        id="calendar.mail_menu_calendar"
        parent="ubisol_base_menu.menu_1_list"
        action="calendar.action_calendar_event" web_icon="calendar,static/description/icon.png" groups="base.group_user" sequence="3"/>

    <menuitem name="Employees"
        id="hr.menu_hr_employee_payroll"
        parent="ubisol_base_menu.menu_1_list"
        groups="hr.group_hr_manager,hr.group_hr_user,base.group_user" sequence="4"/>  

        <menuitem name="Баримтын загвар"
            id="oh_employee_documents_expiry.hr_document_template_menuitem"
            parent="hr.menu_hr_employee_payroll"
            action="oh_employee_documents_expiry.hr_document_template_action" groups="hr.group_hr_manager" sequence="6"/>

