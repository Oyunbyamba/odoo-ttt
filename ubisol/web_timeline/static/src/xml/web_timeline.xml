<?xml version="1.0" encoding="utf-8" ?>
<template>

    <t t-name="TimelineView.buttons">
        <div class="o_timeline_buttons" role="toolbar" aria-label="Main actions">
            <button type="button" class="btn btn-primary o_timeline_button_save" accesskey="s">
                Save
            </button>
            <button type="button" class="btn btn-secondary o_timeline_button_discard" accesskey="j">
                Discard
            </button>
            <t t-if="widget.is_action_enabled('create')">
                <button type="button" class="btn btn-primary o_timeline_button_add" accesskey="c">
                    Create
                </button>
            </t>
            <t t-if="widget.is_action_enabled('export_xlsx')">
                <button type="button" class="btn btn-secondary fa fa-download o_timeline_export_xlsx" title="Export All"/>
            </t>
        </div>
    </t>

    <t t-name="TimelineView">
        <div class="oe_timeline_view">
            <div class="oe_timeline_buttons">
                <button
                    class="btn btn-default btn-sm oe_timeline_button_today"
                >Today</button>
                <div class="btn-group btn-sm">
                    <button
                        class="btn btn-default oe_timeline_button_scale_day"
                    >Day</button>
                    <button
                        class="btn btn-default oe_timeline_button_scale_week"
                    >Week</button>
                    <button
                        class="btn btn-default oe_timeline_button_scale_month"
                    >Month</button>
                    <button
                        class="btn btn-default oe_timeline_button_scale_year"
                    >Year</button>
                </div>
            </div>
            <div class="oe_timeline_widget" />
        </div>
    </t>
    <svg t-name="TimelineView.Canvas" class="oe_timeline_view_canvas">
        <defs>
            <marker
                id="arrowhead"
                markerWidth="10"
                markerHeight="7"
                refX="10"
                refY="3.5"
                orient="auto"
            >
                <polygon points="10 0, 10 7, 0 3.5" />
            </marker>
        </defs>
    </svg>
</template>
