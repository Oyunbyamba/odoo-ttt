<odoo>
  <data>
    <!-- explicit list view definition -->

    <record id="hr_employee_shift_form" model="ir.ui.view">
      <field name="name">hr.employee.shift</field>
      <field name="model">hr.employee.shift</field>
      <field name="arch" type="xml">
        <form string="shifts">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="assign_type"/>
              </group>
              <group>
                <field name="date_from"/>
                <field name="date_to"/>
              </group>
              <group>
                <field name="hr_department" attrs="{'invisible':[('assign_type', '!=', 'department')]}"/>
                <field name="hr_employee" attrs="{'invisible':[('assign_type', '!=', 'employee')]}"/>
                <field name="resource_calendar_ids"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="resource_calendar_form" model="ir.ui.view">
      <field name="name">resource.calendar</field>
      <field name="model">resource.calendar</field>
      <field name="inherit_id" ref="resource.resource_calendar_form"/>
      <field name="arch" type="xml">
          <xpath expr="//group[@name='resource_details']" position="replace">
            <group>
              <field name="shift_type" style="height:30px;width:200px;font-size:16;"/>
              <field name="color" invisible="1"/>
            </group>
          </xpath>
          <xpath expr="//notebook" position="replace">
              <group string="Days Schedule" attrs="{'invisible':[('shift_type', '!=', 'days')]}">
                <field name="factory_day_ids" nolabel="1">
                    <tree editable="bottom">
                      <field name="name"/>
                      <field name="week_day"/>
                      <field name="start_work" widget="float_time"/>
                      <field name="end_work" widget="float_time"/>
                      <field name="lunch_time_from" widget="float_time"/>
                      <field name="lunch_time_to" widget="float_time"/>
                    </tree>
                </field>
              </group>
              <group string="Shift Schedule" attrs="{'invisible':[('shift_type', '!=', 'shift')]}">
                <field name="normal_day_ids" nolabel="1">
                    <tree editable="bottom">
                      <field name="name"/>
                      <field name="day_period"/>
                      <field name="start_work" widget="float_time"/>
                      <field name="end_work" widget="float_time"/>
                      <field name="lunch_time_from" widget="float_time"/>
                      <field name="lunch_time_to" widget="float_time"/>
                    </tree>
                </field>
              </group>
          </xpath>
      </field>
    </record>

    <record id="shift_template_kanban_view" model="ir.ui.view">
      <field name="name">employee.shift.kanban</field>
      <field name="model">resource.calendar</field>
      <field name="arch" type="xml">
        <kanban class="oe_background_grey o_kanban_dashboard o_shift_kanban">
          <field name="color"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click ">
                <div class="o_dropdown_kanban dropdown">
                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                      <span class="fa fa-bars fa-lg"/>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                      <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                      <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                      <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                    </ul>
                </div>
                <div class="oe_kanban_content">
                  <div class="row">
                    <div class="o_primary style_shift">
                      <div class="text-center"><span style="margin-left:25px;"><strong><field name="name"/></strong></span></div>
                    </div>
                  </div>
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <div class="text-center">
                      <span t-if="record.shift_type.value">[<field name="shift_type"/>]</span>
                    </div>
                  </strong>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="hr_employee_schedule_timeline" model="ir.ui.view">
        <field name="model">hr.employee.schedule</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline
                date_start="start_work"
                date_stop="end_work"
                default_group_by="hr_department"
                event_open_popup="true"
                zoomKey="ctrlKey"
            >
                <field name="hr_employee" />
                <field name="day_period" />
                <templates>
                    <t t-name="timeline-item">
                        <div class="o_project_timeline_item">
                            <img
                                t-if="record.hr_employee"
                                t-attf-src="/web/image/res.users/#{record.hr_employee[0]}/image_128/16x16"
                                t-att-title="record.hr_employee[0]"
                                width="16"
                                height="16"
                                class="mr8"
                            />
                            <t t-esc="record.hr_employee[1]" />
                            <br/>
                            <span name="display_name">
                                <t t-esc="record.day_period[1]" />
                            </span>
                            <!-- <small name="start_work" class="text-info ml4">
                                <t
                                    t-esc="field_utils.format.float_time(record.start_work)"
                                />
                            </small>
                            <small name="end_work" class="text-info ml4">
                                <t
                                    t-esc="field_utils.format.float_time(record.end_work)"
                                />
                            </small> -->
                        </div>
                    </t>
                </templates>
            </timeline>
        </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_calendar">
      <field name="name">Shift Template</field>
      <field name="res_model">resource.calendar</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="view_id" eval="False"/>
      <field name="search_view_id" ref="resource.view_resource_calendar_search"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Define working hours and time table that could be scheduled to your project members
        </p>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_shift">
      <field name="name">Employee Shifts</field>
      <field name="res_model">hr.employee.shift</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
          Click here to configure new periodic reminder.
        </p>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_schedule">
      <field name="name">Employee Shift Schedules</field>
      <field name="res_model">hr.employee.schedule</field>
      <field name="view_mode">timeline</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">
          Click here to configure new periodic reminder.
        </p>
      </field>
    </record>

