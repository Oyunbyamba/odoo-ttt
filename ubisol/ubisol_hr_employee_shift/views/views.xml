<odoo>
  <data>

    <template id="assets_backend_employee_shift" name="Hr Employee Shift" inherit_id="web.assets_backend">
      <xpath expr="." position="inside">
        <script type="text/javascript" src="/ubisol_hr_employee_shift/static/src/js/action_datetime_filter.js"/>
      </xpath>
    </template>

    <!-- explicit list view definition -->
    <record id="hr_employee_shift_form" model="ir.ui.view">
      <field name="name">hr.employee.shift</field>
      <field name="model">hr.employee.shift</field>
      <field name="arch" type="xml">
        <form string="shifts">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="assign_type"/>
              </group>
              <group>
                <field name="date_from"/>
                <field name="date_to"/>
              </group>
              <group>
                <field name="hr_department" attrs="{'invisible':[('assign_type', '!=', 'department')]}"/>
                <field name="hr_employee" attrs="{'invisible':[('assign_type', '!=', 'employee')]}"/>
                <field name="resource_calendar_ids"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="resource_calendar_form" model="ir.ui.view">
      <field name="name">resource.calendar</field>
      <field name="model">resource.calendar</field>
      <field name="inherit_id" ref="resource.resource_calendar_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='resource_details']" position="replace">
          <group>
            <field name="shift_type" style="height:30px;width:200px;font-size:16;"/>
            <field name="color" invisible="1"/>
          </group>
          <group colspan="1" string="Амралтын өдрийн цагийн хуваарь" attrs="{'invisible':[('shift_type', '!=', 'shift')]}">
            <div class="oe_inline">
              Амралтын өдөр
              <field nolabel="1" name="weekend_time" style="width: auto" widget="float_time"/>
              цагийн
              <field nolabel="1" name="weekend_time_type" style="width: auto"/>
              ажил эхлэнэ.
            </div>
          </group>
        </xpath>
        <xpath expr="//page[@name='working_hours']" position="replace">
          <group string="Days Schedule" attrs="{'invisible':[('shift_type', '!=', 'days')]}">
            <field name="factory_day_ids" nolabel="1">
              <tree editable="bottom">
                <field name="name"/>
                <field name="week_day"/>
                <field name="start_work" widget="float_time"/>
                <field name="end_work" widget="float_time"/>
                <field name="lunch_time_from" widget="float_time"/>
                <field name="lunch_time_to" widget="float_time"/>
              </tree>
            </field>
          </group>
          <group string="Shift Schedule" attrs="{'invisible':[('shift_type', '!=', 'shift')]}">
            <field name="normal_day_ids" nolabel="1">
              <tree editable="bottom">
                <field name="name"/>
                <field name="day_period"/>
                <field name="start_work" widget="float_time"/>
                <field name="end_work" widget="float_time"/>
                <field name="lunch_time_from" widget="float_time"/>
                <field name="lunch_time_to" widget="float_time"/>
              </tree>
            </field>
          </group>
        </xpath>
      </field>
    </record>

    <record id="hr_employee_schedule_form" model="ir.ui.view">
      <field name="name">hr.employee.schedule</field>
      <field name="model">hr.employee.schedule</field>
      <field name="arch" type="xml">
        <form string="Schedules">
          <sheet>
            <group>
              <group>
                <field name="hr_department"/>
                <field name="hr_employee"/>
              </group>
              <group>
                <field name="shift_type"/>
                <field name="week_day" attrs="{'invisible':[('shift_type', '!=', 'days')]}"/>
                <field name="day_period" attrs="{'invisible':[('shift_type', '!=', 'shift')]}"/>
              </group>
              <group>
                <field name="start_work"/>
                <field name="end_work"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="shift_template_kanban_view" model="ir.ui.view">
      <field name="name">employee.shift.kanban</field>
      <field name="model">resource.calendar</field>
      <field name="arch" type="xml">
        <kanban class="oe_background_grey o_kanban_dashboard o_shift_kanban">
          <field name="color"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click ">
                <div class="o_dropdown_kanban dropdown">
                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                      <span class="fa fa-bars fa-lg"/>
                    </a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                      <t t-if="widget.editable"><li><a type="edit">Засах</a></li></t>
                      <t t-if="widget.deletable"><li><a type="delete">Устгах</a></li></t>
                      <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                    </ul>
                </div>
                <div class="oe_kanban_content">
                  <div class="row">
                    <div class="o_primary style_shift">
                      <div class="text-center"><span style="margin-left:25px;"><strong><field name="name"/></strong></span></div>
                    </div>
                  </div>
                </div>
                <div class="oe_kanban_details">
                  <strong>
                    <div class="text-center">
                      <span t-if="record.shift_type.value">[<field name="shift_type"/>]</span>
                    </div>
                  </strong>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="hr_employee_schedule_view_tree" model="ir.ui.view">
      <field name="name">hr.employee.schedule.tree</field>
      <field name="model">hr.employee.schedule</field>
      <field name="arch" type="xml">
        <tree string="Ажиллах график" create="true" edit="true">
          <field name="hr_department" string="Хэлтэс"/>
          <field name="hr_employee" string="Ажилтан"/>
          <field name="start_work" string="Ажил эхлэх"/>
          <field name="end_work" string="Ажил дуусах"/>
          <field name="hr_employee_shift"/>
        </tree>
      </field>
    </record>

    <record id="hr_employee_schedule_calendar" model="ir.ui.view">
        <field name="name">hr.employee.schedule</field>
        <field name="model">hr.employee.schedule</field>
        <field name="arch" type="xml">
            <calendar 
              string="Employee Schedule Calendar" 
              date_start="start_work" 
              event_open_popup="true" 
              date_stop="end_work" 
              color="hr_department" 
              mode="month" 
              quick_add="True"
            >
              <field name="hr_department"/>
            </calendar>
        </field>
    </record>

    <record id="hr_employee_schedule_timeline" model="ir.ui.view">
      <field name="model">hr.employee.schedule</field>
      <field name="type">timeline</field>
      <field name="arch" type="xml">
        <timeline
          date_start="start_work"
          date_stop="end_work"
          mode="week"
          default_group_by="hr_department"
          event_open_popup="true"
          zoomKey="ctrlKey"
          colors="#f2d096: day_period_int==1; #49beb7: day_period_int==2; #ed8975: day_period_int==3; #2F4858: day_period_int==4; #57423F: day_period_int==5;"
          creatable="true"
          updatable="true"
          draggable="true"
          removable="true"
        >
          <field name="day_period" />
          <templates>
            <t t-name="timeline-item">
              <div class="o_project_timeline_item">
                <span name="display_name">
                  <t t-esc="record.day_period[1]" />
                </span>
              </div>
            </t>
          </templates>
        </timeline>
      </field>
    </record>

    <!--search view for the patient-->
    <record id="hr_employee_schedule_search" model="ir.ui.view">
        <field name="name">hr.employee.schedule.search</field>
        <field name="model">hr.employee.schedule</field>
        <field name="arch" type="xml">
            <search string="Search">
              <filter string="Department" name="is_main" domain="[('is_main', '=', True)]"/>
              <separator/>
              <filter string="Амралтын өдөр харуулахгүй" name="is_rest" domain="[('day_period_int', '!=', 3)]"/>
              <separator/>
              <group expand="0" string="Group By">
                <filter string="Хэлтэлсээр бүлэглэх" name="department" context="{'group_by': 'hr_department'}"/>
                <filter string="Ажилтнаар бүлэглэх" name="employee" context="{'group_by': 'hr_employee'}"/>
                <separator/>
                <filter string="Ажиллах хуваариар бүлэглэх" name="groupby_name" context="{'group_by': 'hr_employee_shift'}"/>
              </group>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_calendar">
      <field name="name">Shift Template</field>
      <field name="res_model">resource.calendar</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="view_id" eval="False"/>
      <field name="search_view_id" ref="resource.view_resource_calendar_search"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Ээлжийн хуваарийн төлөвлөгөө
        </p>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_shift">
      <field name="name">Employee Shifts</field>
      <field name="res_model">hr.employee.shift</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Ээлжийн хуваарийн төлөвлөгөө
        </p>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window_schedule">
      <field name="name">Employee Shift Schedules</field>
      <field name="res_model">hr.employee.schedule</field>
      <field name="view_mode">tree,timeline,calendar</field>
      <field name="context">{"search_default_department":1, "search_default_employee":1, "search_default_is_rest":1}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Ээлжийн хуваарь
        </p>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem 
      name="Employee Shifts" 
      id="ubisol_hr_employee_shift.employee_shift" 
      groups="hr.group_hr_manager" 
      sequence="10"
    />

    <!-- menu categories -->
    <menuitem name="Schedules" id="ubisol_hr_employee_shift.schedules" parent="ubisol_hr_employee_shift.employee_shift"
              action="ubisol_hr_employee_shift.action_window_schedule" sequence="0"/>
    <menuitem name="Shifts" id="ubisol_hr_employee_shift.shifts" parent="ubisol_hr_employee_shift.employee_shift"
              action="ubisol_hr_employee_shift.action_window_shift" sequence="1"/>
    <menuitem name="Configure" id="ubisol_hr_employee_shift.configure" parent="ubisol_hr_employee_shift.employee_shift"
              action="ubisol_hr_employee_shift.action_window_calendar" sequence="2"/>

    <!-- actions -->
    <!-- <menuitem name="List" id="ubisol_hr_employee_shift.menu_1_list" parent="ubisol_hr_employee_shift.menu_1"
              action="ubisol_hr_employee_shift.action_window"/> -->
    <!-- <menuitem name="Server to list" id="ubisol_hr_employee_shift" parent="ubisol_hr_employee_shift.menu_2"
              action="ubisol_hr_employee_shift.action_server"/> -->

  </data>
</odoo>