<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ubisol_hr_employee_shift.list">
      <field name="name">ubisol_hr_employee_shift list</field>
      <field name="model">hr.employee.shift</field>
      <field name="arch" type="xml">
        <field name="name"/>
        <field name="hr_department"/>
        <field name="shift_type"/>
        <group name="day_ids" colspan="3" string="Day Plan">
            <field name="day_ids">
                <tree editable="bottom">
                  <field name="start_date" required="1"/>
                  <field name="end_date" required="1"/>
                  <field name="work_type" required="1"/>
                </tree>
            </field>
        </group>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ubisol_hr_employee_shift.action_window">
      <field name="name">Employee Shifts</field>
      <field name="res_model">hr.employee.shift</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


    <!-- server action to the one above -->
