    <!-- Top menu item -->

    <menuitem 
      name="Employee Shifts" 
      id="ubisol_hr_employee_shift.employee_shift" 
      groups="hr.group_hr_manager" 
      sequence="0"
    />

    <!-- menu categories -->

    <menuitem name="Menu 1" id="ubisol_hr_employee_shift.menu_1" parent="ubisol_hr_employee_shift.employee_shift"/>
    <menuitem name="Menu 2" id="ubisol_hr_employee_shift.menu_2" parent="ubisol_hr_employee_shift.employee_shift"/>

    <!-- actions -->

